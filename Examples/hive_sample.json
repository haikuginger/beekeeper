{
    "name": "SystemName",
    "root": "url_here",
    "mimetype": "application/json",
    "versioning": {
        "version": 8,
        "previousVersions": [
            {
                "version": 7,
                "location": "http://path.to/previous/hive",
                "expires": "2015-12-31T12:00:00Z"
            }
        ]
    },
    "variables": {
        "username": {
            "type": "http_basic_auth"
        },
        "password": {
            "type": "http_basic_auth"
        },
        "subdomain": {
            "type": "url_replacement",
            "value": "my_subdomain"
        },
        "apikey": {
            "type": "url_param"
        }
    },
    "endpoints": {
        "EndpointOne": {
            "path": "url_extension_here",
            "methods": [
                "GET",
                "POST",
                "PUT"
            ],
            "variables": {}
        },
        "EndpointTwo": {
            "path": "other_url_extension",
            "methods": [
                "PUT",
                "GET"
            ]
        }
    },
    "objects": {
        "ObjectOne": {
            "description": "Short description string",
            "id_variable": "Variable name for the unique id of the object",
            "actions": {
                "create": {
                    "endpoint": "EndpointOne",
                    "method": "POST",
                    "mimetype": {
                        "takes": "application/json",
                        "returns": "application/json"
                    },
                    "variables": {
                        "this_variable": {
                            "type": "url_param",
                            "value": "whatever"
                        },
                        "data_variable": {
                            "type": "data",
                            "mimetype": "application/json"
                        }
                    }
                },
                "update": {
                    "endpoint": "EndpointTwo",
                    "method": "PUT"
                },
                "get": {
                    "endpoint": "EndpointTwo",
                },
                "list": {
                    "endpoint": "EndpointThree",
                }
            }
        }
    }
}